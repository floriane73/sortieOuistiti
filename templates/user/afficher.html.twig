{% extends 'base.html.twig' %}

{% block body %}
    <h1>Afficher un profil</h1>
<div>
    <div>
        <h2>{{ profil.pseudo }}</h2>
        <div>
            {% if profil.avatarPath is not empty %}
                <img src="{{ asset('uploads/avatar/'~profil.avatarPath) }}" alt="{{ profil.pseudo }}"
            {% endif %}
        </div>
        <p>Prénom : {{ profil.prenom }}</p>
        <p>Nom : {{ profil.nom }}</p>
        <p>Téléphone : {{ profil.telephone }}</p>
        <p>Email : {{ profil.email }}</p>
        <p>Campus : {{ profil.campus.nom }}</p>
    </div>
    <div>
        <a href="{{ path("main_index") }}"><button type="submit">Retour</button></a>

        {% if app.user %}
            {% if app.user.id == app.user.administrateur%}
                <button><a href="{{ path('user_desactiver_utilisateur', {"id": profil.id}) }}">Désactiver</a></button>
                <button><a href="{{ path('user_supprimer_profil', {"id": profil.id}) }}">Supprimer</a></button>
            {% endif %}
        {% endif %}

    </div>

    {% endblock %}

    {% block title %}
    {{ parent() }} | Afficher profil
{% endblock %}