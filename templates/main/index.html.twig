{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Liste des sorties</h1>

    <h2>Date du jour : {{ 'now'|date('d/m/Y') }}</h2>
    <h2>Participant : {{ app.user.prenom }} {{ app.user.nom }}</h2>

    {{ form(filtresForm) }}


    <table>
        <tr>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clôture</th>
            <th>Inscrits</th>
            <th>Etat</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>actions</th>
        </tr>
    {%  for sortie in listeSorties %}
        <tr>
            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.dateHeureDebut|date('d/m/Y h:i') }}</td>
            <td>{{sortie.dateLimiteInscription|date('d/m/Y')}}</td>
            <td>
                {% if sortie.nbInscriptionsMax is not null %}
                    {{ sortie.participantsInscrits.count }} / {{ sortie.nbInscriptionsMax}}
                {% else %}
                    {{ sortie.participantsInscrits.count }}
            {% endif %}
            </td>
            <td>{{ sortie.etatSortie.libelle }}</td>
            <td></td>
            <td>{{ sortie.participantOrganisateur.nom }}</td>

            <td>
                {% if sortie.participantOrganisateur.id is same as(app.user.id) %}
                    <a href="{{ path('sortie_modifier', {'id': sortie.id}) }}">Modifier</a>
                    <a href="{{ path('sortie_details', {'id': sortie.id}) }}">Afficher</a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </table>
    <div id="pagination">
        {{ knp_pagination_render(listeSorties) }}
    </div>
    <div >
        <a href="{{ path('sortie_ajout') }}" class="ajoutSortie">Créer une sortie</a>
    </div>
</div>
{% endblock %}
