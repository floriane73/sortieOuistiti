{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des sorties</h1>
        <div class="js-filter">
            <div>
                {% include 'main/_filtres.html.twig' with {formFiltres: formFiltres} %}
            </div>
            <div class="js-filter-content">
                <table>
                    <tr class="js-filter-sorting">
                        {% include 'main/_sorting.html.twig' with {listeSorties: listeSorties} %}
                        <th>Inscrits</th>
                        <th>Etat</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>actions</th>
                    </tr>
                    {% include 'main/_sorties.html.twig' with {listeSorties: listeSorties} %}
                </table>
            </div>
            <div class="js-filter-pagination">
                {% include 'main/_pagination.html.twig' with {listeSorties: listeSorties} %}
            </div>
            <div>
                <a href="{{ path('sortie_ajout') }}" class="ajoutSortie">Cr√©er une sortie</a>
            </div>
        </div>
    </div>
{% endblock %}
