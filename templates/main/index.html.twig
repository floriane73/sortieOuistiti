{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h1>Liste des sorties</h1>

        <div class="js-filter-form">
            {% include 'main/_filtres.html.twig' with {formFiltres: formFiltres} %}
        </div>
        <div class="js-filter-content">
            <table>
                <tr>
                    <div class="js-filter-sorting">
                        <th>{{ knp_pagination_sortable(listeSorties, 'Nom', 'sortie.nom') }}</th>
                        <th>{{ knp_pagination_sortable(listeSorties, 'Date sortie', 'sortie.dateHeureDebut') }}</th>
                        <th>{{ knp_pagination_sortable(listeSorties, 'Clôture', 'sortie.dateLimiteInscription') }}</th>
                    </div>
                    <th>Inscrits</th>
                    <th>Etat</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>actions</th>
                </tr>
            {% include 'main/_sorties.html.twig' with {listeSorties: listeSorties} %}
            </table>
        </div>


        <div id="pagination" class="js-filter-pagination">
            {{ knp_pagination_render(listeSorties) }}
        </div>
        <div>
            <a href="{{ path('sortie_ajout') }}" class="ajoutSortie">Créer une sortie</a>
        </div>
    </div>
{% endblock %}
